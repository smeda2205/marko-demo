<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
<xsl:output method="html"/>
<xsl:include href='PageLayout.xsl'/>

<xsl:template match="/">
  <xsl:call-template name='page-layout'>
    <xsl:with-param name='root-node' select="ComponentStatusList"/>
    <xsl:with-param name='title-text' select="'ComponentStatus List'"/>
  </xsl:call-template>
</xsl:template>

<xsl:template name='page-content'>
  <xsl:apply-templates select="/ComponentStatusList"/>
</xsl:template>

  <!--******************************************************
  ** "ComponentStatusList" template
  ***************************************************-->
  <xsl:template match="ComponentStatusList">
  <a name="Component_{position()}"/>   
  <div id="categoryListTableId_title" class="table_title">ComponentStatus List</div>
  <table width="100%" id="categoryListTableId" class="display">
    <thead>
     <tr>
      <th class="left">Name</th>
      <th class="left" width="50%">Status</th>
     </tr>
    </thead>
  <xsl:for-each select="Component">
  <xsl:sort select="@name" data-type="text" case-order="lower-first" />
    <tr>
    <td>
      <a href="ValidateInternals?component={@name}" title="alias: {@alias}">
        <xsl:value-of select="@name"/>
        </a>
      </td>
    <td>
        <xsl:value-of select="@status"/>
      </td>
      </tr>
  </xsl:for-each>
  </table>
  </xsl:template>
</xsl:stylesheet>
