REPORTER = spec
BASE = .
JSHINT = ./node_modules/.bin/jshint

all: lint test

test:
	@NODE_ENV=test DEPLOY_ENV=test DEBUG=lru-backup-*,global-header-ebay* ./node_modules/.bin/mocha test/*.js --timeout 10000 \
	--reporter $(REPORTER)

lint:
	@$(JSHINT) index.js \
	$(JSHINT) ./lib \
	$(JSHINT) ./taglib \
	$(JSHINT) ./test

.PHONY: test docs
