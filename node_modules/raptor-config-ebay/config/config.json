{
    "refreshconfig": {
        "domain": "E|ebay.com",
        "target": "Global",
        "forceUpdate": "0",     // increment this counter to force update config
        "refreshInterval" : 10  //minutes
    },
    "services": {
        "raptorconfig": {
            "protocol": "http:",
            "hostname": "rcfgws.vip.ebay.com",
            "port": "80",
            "basepath": "/rcfgmongo",
            "transport": "generic",
            "socketTimeout": 5000,
            "method": "GET",
            "retry" : 1,
            "error-handler" : {
                "success-codes": [404]
            },
            "instruments": [ "error-handler", "retry", "config-bean", "cal"]
        }
    },

    "@ConfigBean": {
        "raptor-config-ebay":  {
            "refreshconfig" : [
                "refreshconfig:forceUpdate",
                "refreshconfig:refreshInterval"
            ]
        }
    }
}
